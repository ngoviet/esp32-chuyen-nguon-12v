# ESPHome Secrets Template
# Copy file này thành 'secrets.yaml' và điền thông tin thực của bạn

# WiFi Configuration
wifi_ssid: "YOUR_WIFI_SSID"
wifi_password: "YOUR_WIFI_PASSWORD"

# WiFi Access Points (có thể có nhiều)
# Aruba T1 (Channel 1)
wifi_ssid_t1: "YOUR_WIFI_SSID"
wifi_password_t1: "YOUR_WIFI_PASSWORD"
wifi_bssid_t1: "xx:xx:xx:xx:xx:xx"

# Aruba T2 (Channel 6)
wifi_ssid_t2: "YOUR_WIFI_SSID"
wifi_password_t2: "YOUR_WIFI_PASSWORD"
wifi_bssid_t2: "xx:xx:xx:xx:xx:xx"

# Aruba T3 (Channel 11)
wifi_ssid_t3: "YOUR_WIFI_SSID"
wifi_password_t3: "YOUR_WIFI_PASSWORD"
wifi_bssid_t3: "xx:xx:xx:xx:xx:xx"

# OTA Password
ota_password: "your_ota_password"

# API Encryption (tùy chọn)
# api_encryption_key: "your_32_character_base64_key_here="